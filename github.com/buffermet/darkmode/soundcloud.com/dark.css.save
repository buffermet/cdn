/* soundcloud */

header {
    background: rgb(6,6,6) !important;
}

input.commentForm__input {
    color: #fff !important;
}


a.sc-button.sc-button-white {
    background: #000;
}

.uploadLoggedOut__testimonials {
    background: #111 !important;
}

div.modal__modal,
div#app,
div.dropbar__content,
div.playControls__inner,
div.playControls__elements,
div.sc-button-group,
div.sound__soundActions,
div.volume__sliderWrapper,
div.searchTitle,
div.l-top,
div.dialog,
html,
body {
    background-color: #000 !important;
}

div.commentForm__wrapper,
.playControls__inner, .playControls__bg,
ul.userNetworkTabs,
div.listenEngagement,
input.commentForm__input,
button.sc-button-responsive {
    background-color: #000 !important;
    border-color: #000 !important;
}

input[type=text],
input[type=search] {
    background-color: #222 !important;
    border-color: #111 !important
}

.modal.modalWhiteout {
    background-color: rgba(0,0,0,0.8);
}

div.playControls {
    z-index: 9999999;
}

.truncatedAudioInfo.m-overflow.m-collapsed .truncatedAudioInfo__wrapper:after {
	background: #000;
    background: linear-gradient(
    	hsla(0,0%,100%,0),
    hsla(0,100%,0%,1) 90%,
    #000);
}
